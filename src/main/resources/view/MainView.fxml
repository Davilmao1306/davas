<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.diariocultural.fx.MainViewController">
    <left>
        <VBox prefWidth="220.0" spacing="10.0" style="-fx-background-color: #ECEFF1;">
            <children>
                <Label text="Diário Cultural">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>
                <Button onAction="#showLibraryView" prefHeight="40.0" prefWidth="220.0" text="Meu Acervo" />
                <Button onAction="#showBookFormView" prefHeight="40.0" prefWidth="220.0" text="Cadastrar Livro" />
                <Button onAction="#showMovieFormView" prefHeight="40.0" prefWidth="220.0" text="Cadastrar Filme" />
                <Button onAction="#showSeriesFormView" prefHeight="40.0" prefWidth="220.0" text="Cadastrar Série" />
            </children>
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="contentArea" />
    </center>
</BorderPane>